services:
  db:
    image: pgvector/pgvector:pg16
    environment:
      POSTGRES_USER: piolet
      POSTGRES_PASSWORD: superseguro
      POSTGRES_DB: piolet_rag
    ports: ["5432:5432"]
    volumes: 
      - pgdata:/var/lib/postgresql/data
      - ./schema.sql:/docker-entrypoint-initdb.d/schema.sql
    container_name: piolet-db
services:
  api:
    extra_hosts:
      - "host.docker.internal:host-gateway"
    environment:
      OLLAMA_BASE_URL: "http://host.docker.internal:11434"

  api:
    build: .
    env_file: ../.env
    depends_on: [db]
    ports: ["8000:8000"]
    container_name: piolet-api
    volumes:
      - ./backend:/app 
      - ../.env:/app/.env

volumes:
  pgdata: {} 